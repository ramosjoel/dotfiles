" docs : https://github.com/plasticboy/vim-markdown
Plug 'plasticboy/vim-markdown'

" -- settings
let g:vim_markdown_folding_disabled = 1
let g:vim_markdown_math = 1           " enable LaTeX
let g:vim_markdown_frontmatter = 1    " enable yaml frontmatter
let g:vim_markdown_strikethrough = 1  " enable strikethrough with tildes ~~strikethrough~~
let g:vim_markdown_new_list_item_indent = 2  " default list item indent is 4

